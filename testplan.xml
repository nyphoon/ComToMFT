<?xml version="1.0" encoding="UTF-8"?>
<TestPlan>
	<information author="nyphoon" product="Linux UART">This is the test plan example of ComToMFT project.</information>
	
	<TestItemList>
		<TestItem name="serial demo" way="serial" skip="yes">
			<serial name="COM7" rate="115200"/>
			<operation name="connect">
				<way op="start"/>
			</operation>
			<operation name="test_ls">
				<msg type="ok_no" title="start">start operation!</msg>
				<read op="start"/>
				<write>ls</write>
				<delay>1000</delay>
				<read op="stop"/>
				<verify method="occour">test.txt</verify>
			</operation>
			<operation name="test_ping">
				<read op="start"/>
				<write>ping</write>
				<msg type="countdown" title="let's wait ping">5000</msg>
				<command>@INT@03</command>
				<read op="stop"/>
				<verify method="manual"/>
			</operation>
			<operation name="disconnect">
				<way op="stop"/>
			</operation>
		</TestItem>
		
		<TestItem name="pure operation" way="" skip="yes">
			<operation name="only message">
				<msg type="ok_no" title="start">ç´…LED?</msg>
			</operation>
		</TestItem>
		
		<TestItem name="hello" way="custom">
			<custom name="hello" command="hello.exe"></custom>
			<operation name="lots of verification way">
				<read op="start"/>
				<way op="start"/>
				<delay>1000</delay>
				<read op="stop"/>
				<verify method="occour_in_stdout">hello</verify>
				<verify method="copy">sample_result.bat</verify>
				<verify method="re_search">(\d+)\.(\d+)</verify>
				<way op="stop"/>
			</operation>
		</TestItem>
	</TestItemList>
	
</TestPlan>
